<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customers</title>
    <link rel="stylesheet" href="./../../styles.css" />
  </head>
  <body class="bg-[#f0eaea]">
    <%- include('./../partials/nav') %>

    <div class="grid grid-cols-4 gap-10">
      <%- include('./../partials/profileActions') %>

      <main class="col-span-3">
        <div class="flex flex-col">
          <div><h1 class="text-center text-3xl p-4">Customers</h1></div>

          <% customers.forEach(customer => { %>
          <div
            class="bg-[#fffdfd] m-3 rounded-3xl border-2 text-center p-3 border-blue-300"
          >
            <h3 class="text-xl"><%= customer?.name %></h3>
            <div class="flex flex-row justify-around mt-2 text-xl">
              <h3><%= customer?.phoneNumber %></h3>
              <h3><%= customer?.country %></h3>
            </div>
            <div class="mt-2 pl-[26rem] pt-4">
              <a href="/customers/customer/<%= customer?._id %>" class=""
                ><span
                  class="bg-purple-700 border rounded-md px-3 py-1 text-xl text-white hover:bg-purple-600 hover:scale-105 hover:text-2xl transition ease-in-out duration-300 cursor-pointer"
                  >View</span
                ></a
              >
              <form
                action="/customers/delete-customer/<%= customer?._id %>?_method=DELETE"
                method="post"
              >
                <button>
                  <i
                    class="fa-solid fa-trash-can pl-32 text-xl text-[red] hover:scale-105 hover:text-2xl transition ease-in-out cursor-pointer"
                  ></i>
                </button>
              </form>
            </div>
          </div>
          <% }) %>
        </div>
      </main>
    </div>
  </body>
</html>
